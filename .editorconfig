# http://editorconfig.org

root = true

[*]
indent_size = 4
indent_style = space
end_of_line = crlf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.{html,xml}]
indent_size = 4

[*.{css,scss,json,yml,js}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
